{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsxImportSource": "@emotion/react",
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@config": ["src/config"],
      "@contexts/*": ["src/contexts/*"],
      "@head": ["src/head"],
      "@hooks/*": ["src/hooks/*"],
      "@layout": ["src/layout"],
      "@templates/*": ["src/templates/*"],
      "@theme": ["src/theme"],
      "@theme/*": ["src/theme/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "src",
    "gatsby-browser.tsx",
    "gatsby-config.ts",
    "gatsby-node.ts",
    "gatsby-ssr.tsx"
  ]
}
